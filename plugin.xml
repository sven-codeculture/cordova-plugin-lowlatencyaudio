                     target-dir="src/com/google/android/vending/expansion/downloader" />
        <source-file src="src/android/downloader/src/com/google/android/vending/expansion/downloader/DownloaderClientMarshaller.java"
                     target-dir="src/com/google/android/vending/expansion/downloader" />
